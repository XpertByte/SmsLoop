<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/background"
  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" >

    <ScrollView
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        
         >
        
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="5.0dip">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/Black" android:textSize="21.0dip" android:layout_width="90.0dip" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:layout_marginTop="5.0dip" android:text="Recipient" />
                <MultiAutoCompleteTextView   android:ellipsize="end" android:id="@+id/phno" android:layout_width="fill_parent" android:layout_height="50dp" android:layout_marginTop="5.0dip" />
            </LinearLayout>
            
            <RelativeLayout android:gravity="bottom" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/Black" android:textSize="21.0dip" android:id="@+id/num" android:layout_width="90.0dip" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="Loop" android:layout_alignParentLeft="true" />
                <EditText android:typeface="normal" android:id="@+id/n" android:layout_width="70.0dip" android:layout_height="wrap_content" android:text="5" android:maxLength="3" android:inputType="number" android:layout_toRightOf="@id/num" />
                <TextView android:textColor="@color/Black" android:textSize="21.0dip" android:id="@+id/shotname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Times" android:layout_toRightOf="@id/n" android:layout_centerVertical="true" />
            </RelativeLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/Black" android:textSize="21.0dip" android:layout_gravity="center_horizontal" android:id="@+id/sect" android:layout_width="90.0dip" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="Delay" />
                <EditText android:typeface="normal" android:id="@+id/sec" android:layout_width="70.0dip" android:layout_height="wrap_content" android:text="0" android:maxLength="3" android:inputType="number" />
                <TextView android:textColor="@color/Black" android:textSize="21.0dip" android:id="@+id/secs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Secs" />
            </LinearLayout>
            
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/Black" android:textSize="21.0dip" android:layout_width="90.0dip" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="Message" />
                <LinearLayout android:gravity="top" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <EditText android:typeface="normal" android:gravity="top" android:id="@+id/msgBox" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="5" android:singleLine="false" android:maxLength="300" />
                </LinearLayout>
            </LinearLayout>
            
            <RelativeLayout android:gravity="bottom" android:layout_width="fill_parent" android:layout_height="wrap_content">
<!--             <Button android:id="@+id/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="90.0dip" android:layout_alignParentLeft="true" android:text="@string/send" /> -->
<!--             <Button android:id="@+id/contact" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/about" android:layout_toRightOf="@+id/button"/> -->
				 <Button android:background="@drawable/loop" android:id="@+id/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="90.0dip" android:layout_alignParentTop="true" />
	             <Button android:background="@drawable/a" android:id="@+id/contact" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="90.0dip"  android:layout_below="@+id/button"/>
	         
			</RelativeLayout>  
 
  
    </LinearLayout>
    </ScrollView>
</LinearLayout>
